<div class="breadcrumbs">
	{{# twocrumbs }}
	<!-- Two Crumbs -->	
	<span xmlns:v="http://rdf.data-vocabulary.org/#">
		<span rel="v:child" typeof="v:Breadcrumb">
			<a href="http://www.intersystems.com/sample-page/" rel="v:url" property="v:title">{{ crumb1 }}</a> &gt; 
			<span class="breadcrumb_last">{{ crumb2 }}</span>
		</span>
	</span>
	{{/ twocrumbs }}
	
	{{# threecrumbs }}
	<!-- Three Crumbs -->		
	<span xmlns:v="http://rdf.data-vocabulary.org/#">
		<span rel="v:child" typeof="v:Breadcrumb">
			<a href="http://www.intersystems.com/sample-page/" rel="v:url" property="v:title">{{ crumb1 }}</a>
			 &gt; 
			<span rel="v:child" typeof="v:Breadcrumb">
				<a href="http://www.intersystems.com/sample-page/sample-child-page/" rel="v:url" property="v:title">{{ crumb2 }}</a>
				 &gt; 
				<span class="breadcrumb_last">{{ crumb3 }}</span>
			</span>
		</span>
	</span>
	{{/ threecrumbs }}
</div>